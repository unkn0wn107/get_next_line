{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "build",
      "command": "/usr/bin/gcc",
      "args": [
        "-Wall",
        "-Werror",
        "-Wextra",
        "-g",
        "${workspaceFolder}/*.c",
        "-o",
        "${workspaceFolder}/main"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    }
  ],
  "version": "2.0.0"
}